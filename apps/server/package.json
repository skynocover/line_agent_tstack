{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "wrangler dev --port=8787",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "d1:migrations:local": "wrangler d1 migrations apply DB --local",
    "d1:migrations:remote": "wrangler d1 migrations apply DB --remote"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.19",
    "@cloudflare/workers-types": "^4.20250613.0",
    "@libsql/client": "^0.15.9",
    "@orpc/client": "^1.5.0",
    "@orpc/server": "^1.6.8",
    "ai": "^4.3.16",
    "axios": "^1.9.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.2",
    "file-type": "^21.0.0",
    "hono": "^4.8.2",
    "ical-generator": "^9.0.0",
    "ics": "^3.8.1",
    "zod": "^3.25.16"
  },
  "devDependencies": {
    "@types/node": "^22.16.0",
    "drizzle-kit": "^0.31.2",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.3",
    "wrangler": "^4.20.0"
  }
}
